{
    "name": "hyperion/workflow",
    "type": "project",
    "description": "Hyperion Workflow Controller",
    "autoload": {
        "psr-0": { "": ["src/", "tests/"] }
    },
    "repositories": [
        {
            "type": "vcs",
            "url":  "https://github.com/jordonsc/hyperion_dbal.git"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "symfony/yaml": "~2.4",
        "symfony/event-dispatcher": "~2.4",
        "symfony/console": "~2.4",
        "symfony/dependency-injection": "~2.4",
        "symfony/config": "~2.4",
        "eloquent/enumeration": "~5.1",
        "hyperion/dbal": "*@dev",
        "aws/aws-sdk-php": "~2.6",
        "psr/log": "~1.0",
        "incenteev/composer-parameter-handler": "~2.0"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.0.0"
    },
    "scripts": {
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters"
        ]
    },
    "config": {
        "bin-dir": "bin",
        "preferred-install": "dist"
    },
    "extra": {
        "incenteev-parameters": { "file": "app/parameters.yml" }
    }
}

